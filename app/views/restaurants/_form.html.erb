<div class="form_style">
<%= form_for @restaurant do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :category %><br>
  <%= f.text_field :category %>
  <br>
  <%= f.label :address %><br>
  <%= f.text_field :address %>
  <br>
  <%= f.label :comments %><br>
  <%= f.text_field :comments %>
  <br>
  <%= f.submit "Submit", id: "play_button" %>
<% end %>
</div>
